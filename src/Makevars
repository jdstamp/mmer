## Use the R_HOME indirection to support installations of multiple R version
PKG_LIBS = `$(R_HOME)/bin/Rscript -e "Rcpp:::LdFlags()"` -L/usr/local/lib -L/opt/homebrew/lib $(LDFLAGS) $(SHLIB_OPENMP_CXXFLAGS) -lhdf5 `$(R_HOME)/bin/Rscript -e Rhdf5lib::pkgconfig('PKG_CXX_LIBS')`
PKG_CPPFLAGS = -I../inst/include/ -I/usr/local/include -I/opt/homebrew/include $(CPPFLAGS) 
PKG_CXXFLAGS = $(SHLIB_OPENMP_CXXFLAGS)
